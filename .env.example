# Node Environment
NODE_ENV=development

# BSV Configuration
BSV_PRIVATE_KEY=your_private_key_here
BSV_PUBLIC_KEY=your_public_key_here
BSV_ADDRESS=your_address_here

# Database
DATABASE_URL=postgresql://postgres:YOUR_STRONG_PASSWORD_HERE@localhost:5432/raregen

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
API_BASE_URL=http://localhost:3000

# Explorer
EXPLORER_BASE_URL=https://explorer.codenlighten.org

# Fee Configuration
FEE_SATS_PER_KB=100

# Batch Configuration (Phase 2)
BATCH_WINDOW_MS=5000
MAX_BATCH_SIZE=500
MAX_TX_PER_3S=500

# DO Spaces / S3
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_KEY=your_do_key
DO_SPACES_SECRET=your_do_secret
DO_SPACES_BUCKET=your_bucket
DO_SPACES_FOLDER=/your_folder

# Email Configuration (Container B - optional)
# IMPORTANT: If your password contains special characters (quotes, #, spaces),
# wrap the value in DOUBLE QUOTES and escape internal quotes with backslash.
# Examples:
#   Simple: EMAIL_PASSWORD=mypassword123
#   With quote: EMAIL_PASSWORD="my\"password\"123"
#   With space: EMAIL_PASSWORD="my password 123"
EMAIL_PASSWORD="your_email_password_here"
EMAIL_HOST=smtp.privateemail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=noreply@example.com

# Logging
LOG_LEVEL=debug

# Test User Account
TEST_USER_EMAIL=test@example.com

# Identity Key (for signing publishing intents)
TEST_USER_IDENTITY_PRIVATE_KEY=your_test_identity_private_key
TEST_USER_IDENTITY_PUBLIC_KEY=your_test_identity_public_key
TEST_USER_IDENTITY_ADDRESS=your_test_identity_address

# Financial Key (for earnings and payments)
TEST_USER_FINANCIAL_PRIVATE_KEY=your_test_financial_private_key
TEST_USER_FINANCIAL_PUBLIC_KEY=your_test_financial_public_key
TEST_USER_FINANCIAL_ADDRESS=your_test_financial_address

# Tokens Key (for subscription credits and token accounting)
TEST_USER_TOKENS_PRIVATE_KEY=your_test_tokens_private_key
TEST_USER_TOKENS_PUBLIC_KEY=your_test_tokens_public_key
TEST_USER_TOKENS_ADDRESS=your_test_tokens_address

EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_password_here
